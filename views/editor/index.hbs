{{#head 'editor'}}

  <!-- Pure styles -->
  <link
    rel=stylesheet
    href=https://unpkg.com/purecss@1.0.0/build/pure-min.css
    integrity=sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w
    crossorigin=anonymous>

  <!-- Styling for Editor page -->
  <link rel=stylesheet href={{baseURL}}/css/editor.css>

{{/head}}

<main id={{id}} class=pure-form>

  <select id=dropdown>

    <option value=placeholder disabled selected>CV Type</option>

    {{#each types}}
      <option value={{@key}}>{{@key}}</option>
    {{/each}}

  </select>

  <h1 class=page-title>{{Type}}</h1>

  <nav id=list class=pure-menu>
    <ol class=pure-menu-list>
      {{#each docs}}
        <li class=pure-menu-item><a href='/admin/{{../type}}/{{cvid}}' class=pure-menu-link>{{title}}</a></li>
      {{/each}}
    </ol>
  </nav>

</main>

{{#section 'script'}}

  <!-- Script for Editor page -->
  <script src=/js/editor.js type=module defer></script>

{{/section}}

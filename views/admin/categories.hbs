{{#section 'style'}}
  <link rel=stylesheet href=/css/categories.css charset=utf-8>
{{/section}}

<main id=categories-admin>

  <h1>Categories Admin</h1>

  <label for=addCategory>
    <input id=addCategory type=text name=addCategory>
    <button id=addCategoryButton type=button name=addCategoryButton></button>
  </label>

  <ol id=categoryList></ol>

  <section id=details>
    <h2 id=categoryName></h2>
    <p id=description></p>
    <button type=button name=saveButton>Save</button>
    <button type=button name=deleteButton>Delete</button>
  </section>

</main>

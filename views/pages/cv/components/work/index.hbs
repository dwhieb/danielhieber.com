{{!-- HTML for the CV Work section --}}

<section id={{CVTypes.work.id}} class=cv-section>

  {{> cv/header-section/index CVTypes.work.header}}

  <ol>
    {{#each CVItems.work}}
      <li id='{{cvid}}' class=cv-item>

        {{> cv/date/index}}

        <div class=cv-item-content>

          <h3 class=cv-item-title>
            {{#if links.org}}
              <a href='{{links.org}}'>{{role}}, {{organization}}</a>
            {{else}}
              <strong>{{role}}, {{organization}}</strong>
            {{/if}}
          </h3>

          <ul class='achievements bulleted'>
            {{#each achievements}}
              {{!-- The content of the following <li> is wrapped in <p> tags by the Markdown helper --}}
              <li>{{md this}}</li>
            {{/each}}
          </ul>

        </div>

      </li>
    {{/each}}
  </ol>

</section>

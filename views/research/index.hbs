{{!-- HTML for the Research page --}}

{{#head 'research'}}

  <!-- Styling for Research page -->
  <link rel=preload href={{cdn}}/css/research.css as=style onload="this.rel='stylesheet';">

  <noscript>
    <link rel=stylesheet href={{cdn}}/css/research.css>
  </noscript>

{{/head}}

<main id=research>

  <h2 class=header-page>Research</h2>

  {{#each categories}}
    <section id={{key}}>

      <h3 class=header-section>{{title}}</h3>

      <div class=description>
        {{md description}}
      </div>

    </section>
  {{/each}}

</main>

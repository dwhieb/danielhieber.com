{{!-- HTML for the CV Publications section --}}

<section id={{CVTypes.publications.id}} class=cv-section>

  {{> cv/header-section/index CVTypes.publications.header}}

  {{#each CVItems.publications}}
    <section id=publications-{{@key}}>

      <h3 class=header-subsection>{{title}}</h3>

      <ol>
        {{#each this}}
          <li id='{{cvid}}' class=cv-item>

            {{> cv/date/index }}

            <div class=cv-item-content>

              <p class=cv-item-title>
                {{#if links.pdf}}<a href='{{links.pdf}}' aria-label='Publication Title: {{title}}'>{{md title 'inline'}}</a>
                {{else if links.poster}}<a href='{{links.poster}}' aria-label='Publication Title: {{title}}'>{{md title 'inline'}}</a>
                {{else if links.handout}}<a href='{{links.handout}}' aria-label='Publication Title: {{title}}'>{{md title 'inline'}}</a>
                {{else if links.slides}}<a href='{{links.slides}}' aria-label='Publication Title: {{title}}'>{{md title 'inline'}}</a>
                {{else if links.pub}}<a href='{{links.pub}}' aria-label='Publication Title: {{title}}'>{{md title 'inline'}}</a>
                {{else if links.info}}<a href='{{links.info}}' aria-label='Publication Title: {{title}}'>{{md title 'inline'}}</a>
                {{else}}<strong aria-label='Publication Title: {{title}}'>{{md title 'inline'}}</strong>
                {{/if}}
              </p>

              <div class=description>
                {{md description}}
              </div>

              {{#if links.doi}}
                <p class=doi>
                  DOI: <a href='{{links.doi}}'>{{links.doi}}</a>
                </p>
              {{/if}}

              <p class=links>
                {{#if links.abstract}}<a href='{{links.abstract}}'>(abstract)</a>{{/if}}
                {{#if links.pdf}}     <a href='{{links.pdf}}'     >(paper)</a>{{/if}}
                {{#if links.poster}}  <a href='{{links.poster}}'  >(poster)</a>{{/if}}
                {{#if links.handout}} <a href='{{links.handout}}' >(handout)</a>{{/if}}
                {{#if links.slides}}  <a href='{{links.slides}}'  >(slides)</a>{{/if}}
                {{#if links.pub}}     <a href='{{links.pub}}'     >(view online)</a>{{/if}}
                {{#if links.info}}    <a href='{{links.info}}'    >(more info)</a>{{/if}}
              </p>

              {{#is publicationType 'online'}}
                <p class=full-link>Accessible at: <a href={{links.pub}}>{{links.pub}}</a></p>
              {{/is}}

            </div>

          </li>
        {{/each}}
      </ol>

    </section>
  {{/each}}

</section>

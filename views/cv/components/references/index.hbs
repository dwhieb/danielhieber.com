<section id={{CVTypes.references.id}} class=cv-section>

  {{> cv/header-section/index CVTypes.references.header}}

  <ol>
    {{#each CVItems.references}}
      <li id='{{cvid}}' class=cv-item>

        <h3 class=header-subsection><a href='{{links.info}}'>{{name}}</a></h3>

        <p>{{role}}</p>

        <p>{{organization}}</p>

        {{#if phone}}<p>{{phone}}</p>{{/if}}

        <p><a aria-label='Email: {{email}}' href=mailto:{{email}}>{{email}}</a></p>

      </li>
    {{/each}}
  </ol>

</section>

<section id=cvBody>

  {{#with sections.awards}}
    <section id=awards>
      {{> sectionHeader this}}

      <ol>
      {{#each items}}
        <li id={{id}} class=cvItem>
          <time datetime={{year}}>{{year}}</time>
          <p>{{#if links.award}}
            <a href='{{links.award}}' target=_blank>{{{title}}}.</a>
          {{else}}
            <strong>{{{title}}}.</strong>
          {{/if}} {{{description}}}</p>
        </li>
      {{/each}}
      </ol>
    </section>
  {{/with}}

  {{#with sections.publications}}
    <section id=publications>
      {{> sectionHeader this}}

      {{#each publicationTypes}}
        <section id={{@key}}>
          {{> sectionHeader this}}

          <ol>
          {{#each items}}
            <li id={{id}} class=cvItem>
              <time datetime={{date}}>{{year}}</time>
              <div>
                <h2>
                  {{#if links.pubLink}}
                    <a href='{{links.pubLink}}'>{{{title}}}.</a>
                  {{else}}
                    <strong>{{{title}}}.</strong>
                  {{/if}}
                </h2>
                <p>{{{citation}}}</p>
                <p>
                  {{#if links.pubLink}}(<a href='{{links.pubLink}}'>view online</a>){{/if}}
                  {{#if links.purchaseLink}}(<a href='{{links.purchaseLink}}'>purchase</a>){{/if}}
                  {{#if links.paper}}(<a href='{{links.pdf}}'>pdf</a>){{/if}}
                  {{#if links.slides}}(<a href='{{links.slides}}'>slides</a>){{/if}}
                  {{#if links.handout}}(<a href='{{links.handout}}'>handout</a>){{/if}}
                  {{#if links.poster}}(<a href='{{links.handout}}'>handout</a>){{/if}}
                </p>
              </div>
            </li>
          {{/each}}
          </ol>
        </section>
      {{/each}}

    </section>
  {{/with}}

  {{#with sections.media}}
    <section id=media>
      {{> sectionHeader this}}

      <ol>
      {{#each items}}
        <li id={{id}} class=cvItem>
          <time datetime={{date}}>{{date}}</time>
          <p><a href='{{links.pubLink}}'>{{{title}}}</a>, by {{{author}}}. {{{publication}}}</p>
        </li>
      {{/each}}
      </ol>
    </section>
  {{/with}}

  {{#with sections.service}}
    <section id=service>
      {{> sectionHeader this}}

      <ol>
      {{#each items}}
        <li id={{id}} class=cvItem>
          <div class=year>{{startYear}}{{#if endYear}}—{{endYear}}{{/if}}</div>
          <h2>{{{role}}}, <a href='{{links.org}}'>{{{organization}}}</a></h2>
        </li>
      {{/each}}
      </ol>
    </section>
  {{/with}}

  {{#with sections.fieldwork}}
    <section id=fieldwork>
      {{> sectionHeader this}}

      <ol>
      {{#each items}}
        <li id={{id}} class=cvItem>
          <div class=year>{{startYear}}{{#if endYear}}—{{endYear}}{{/if}}</div>
          <p><strong>{{{location}}}.</strong> {{{description}}}</p>
        </li>
      {{/each}}
      </ol>
    </section>
  {{/with}}

  {{#with sections.memberships}}
    <section id=memberships>
      {{> sectionHeader this}}

      <ol>
      {{#each items}}
        <li id={{id}} class=cvItem><p><a href='{{links.org}}'>{{{title}}}</a> ({{{abbreviation}}})<p></li>
      {{/each}}
      </ol>
    </section>
  {{/with}}

  {{#with sections.languages}}
    <section id=languages>
      {{> sectionHeader this}}

      <ol>
      {{#each items}}
        <li id={{id}} class=cvItem>
          <p><a href='{{links.lang}}'>{{{name}}}</a> ({{{autonym}}})</p>
          <p>{{{competency}}}</p>
        </li>
      {{/each}}
      </ol>
    </section>
  {{/with}}

  {{#with sections.proficiencies}}
    <section id=proficiencies>
      {{> sectionHeader this}}

      <section>
        <h2>Technical Skills</h2>
        <ul>
        {{#each software}}
          <li id={{id}} class=cvItem><p><a href='{{links.info}}'>{{{description}}}</a></p></li>
        {{/each}}
        </ul>
      </section>

      <section>
        <h2>Software Proficiencies</h2>
        <ul>
        {{#each skill}}
          <li id={{id}} class=cvItem><p><a href='{{links.info}}'>{{{description}}}</a></p></li>
        {{/each}}
        </ul>
      </section>
    </section>

  {{/with}}

  {{#with sections.references}}
    <section id=references>
      {{> sectionHeader this}}

      <ul>
      {{#each items}}
        <li id={{id}}>
          <h2><a href='{{links.homepage}}'>{{name}}</a></h2>
          <p>{{role}}</p>
          <p>{{organization}}</p>
          <p>{{phone}}</p>
          <p><a href=mailto:{{email}}>{{email}}</a></p>
        </li>
      {{/each}}
      </ul>
    </section>
  {{/with}}

</section>

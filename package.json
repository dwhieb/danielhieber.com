  "description": "The personal academic homepage of Daniel W. Hieber, Ph.D. Candidate in Linguistics at the University of California, Santa Barbara",
  "author": {
    "name": "Daniel W. Hieber",
    "email": "dhieber@ucsb.edu",
    "url": "https://danielhieber.com"
  },
  "homepage": "https://github.com/dwhieb/danielhieber.com#readme",
  "keywords": [
    "linguistics",
    "Chitimacha",
    "Kisii",
    "Gusii",
    "Ekegusii",
    "Mixtec",
    "Swahili",
    "Digital Linguistics",
    "DLx"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dwhieb/danielhieber.com/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwhieb/danielhieber.com.git"
  },
  "main": "app.js",
  "scripts": {
    "build": "npm run build-js & npm run build-css",
    "build-css": "npm run build-css-error & npm run build-css-main",
    "build-css-error": "lessc --clean-css --strict-math=on views/error/index.less public/css/error.css",
    "build-css-main": "lessc --clean-css --strict-math=on views/layouts/main/less/index.less public/css/main.css",
    "build-js": "babel src -d public/js & node build/move.js"
  },
  "engines": {
    "node": ">=8.x"
  },
  "dependencies": {
    "applicationinsights": "^1.0.1",
    "boom": "^7.1.1",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "express": "^4.16.2",
    "express-handlebars": "^3.0.0",
    "helmet": "^3.10.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "azure-storage": "^2.7.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "less": "^2.7.3",
    "less-plugin-clean-css": "^1.5.1",
    "superagent": "^3.8.2"
  }
}
